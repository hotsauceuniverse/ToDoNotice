<?xml version="1.0" encoding="utf-8"?>
<!--게시판 자세히 보기 틀-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".NoticeDetailActivity"
    android:id="@+id/notice_detail_layout"
    >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/notice_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="5dp"
            android:background="@color/white"
            app:contentInsetStart="0dp"
            >

            <ImageView
                android:id="@+id/close_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/close_img"
                android:layout_marginLeft="16dp"
                />

            <ImageView
                android:layout_width="65dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:src="@drawable/diary"
                />

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                >

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/detail_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="가가가가가가가가가가가가가가가가가"
                        android:textSize="21dp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:maxLines="1"
                        android:maxLength="25"
                        android:ellipsize="end"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/more_layout"
                    android:layout_width="23dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <ImageView
                        android:id="@+id/more_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_more_gray"
                        android:background="@color/white"
                        />

                </LinearLayout>

            </RelativeLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/detail_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLength="10000"
                        android:textSize="16dp"
                        android:text="가가가가가가가가가가가가가가"
                        android:textColor="#999999"
                        />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

</LinearLayout>


