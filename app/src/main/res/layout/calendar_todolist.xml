<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/todolist_detail"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:contentInsetStart="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/arrow_left_resize"
            />

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/todolist_detail"
        app:layout_constraintStart_toStartOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/todo_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                >

                <EditText
                    android:id="@+id/todo_title_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="만나서 뭐할까?"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:background="@null"
                    android:maxLines="1"
                    android:maxLength="18"
                    android:singleLine="true"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/todo_time"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:layout_constraintTop_toBottomOf="@+id/todo_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="몇시에 만날까?"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    >

                    <EditText
                        android:id="@+id/hour_et"
                        android:layout_width="85dp"
                        android:layout_height="55dp"
                        android:background="@drawable/time_textbox"
                        android:textSize="25dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:layout_width="15dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text=":"
                        android:textSize="28dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />

                    <EditText
                        android:id="@+id/minute_et"
                        android:layout_width="85dp"
                        android:layout_height="55dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/time_textbox"
                        android:textSize="25dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:textColor="@color/black"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/todo_place"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:layout_constraintTop_toBottomOf="@+id/todo_time"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="어디서 만날까?"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/todo_place_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="약속 장소를 적어주세요!"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:background="@null"
                    android:maxLines="1"
                    android:maxLength="22"
                    android:singleLine="true"
                    />

            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="메모"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/todo_memo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/time_textbox"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:maxLines="4"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:gravity="top"
                    />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <Button
            android:id="@+id/todo_save_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_edit_button_off"
            android:text="저장하기"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:stateListAnimator="@null"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>